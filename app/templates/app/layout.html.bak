<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - Hanoi Sun Medical Center </title>
    {% load staticfiles %}
    <link rel="stylesheet" type="text/css" href="{% static 'app/content/bootstrap.min.css' %}" />
    <link rel="stylesheet" type="text/css" href="{% static 'app/content/site.css' %}" />
    <script src="{% static 'app/scripts/modernizr-2.6.2.js' %}"></script>
    <script src="{% static 'js/main.js' %}"></script>
    
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.8.18/themes/base/jquery-ui.css" type="text/css" /> 
    {% block style %}{% endblock %}
</head>

<body onload="printClock()">
    <input id="csrf" type="hidden" value="{{ csrf_token }}" />
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">Hanoi Sun Medical Center</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    {% if user.is_receptionist %}
                        <li><a href="{% url 'Receptionist:reception_search' %}">Reception</a></li>
                        <li><a href="{% url 'Receptionist:reception_status'%}">Reception Status</a></li>
                        <li><a href="{% url 'Receptionist:reservation'%}">Reservation</a></li>
                    {% elif user.is_doctor %}
                        <li><a href="{% url 'Doctor:waiting'%}">Reception Status</a></li>
                    {% elif user.is_pharmacy %}
                        <li><a href="{% url 'Doctor:waiting'%}">Reception Status</a></li>
                    {% elif user.is_laboratory %}
                        <li><a href="{% url 'Doctor:waiting'%}">Reception Status</a></li>
                    {% elif user.is_admin %}
                        <li><a href="{% url 'Doctor:waiting'%}">Manage</a></li>
                    {% endif %}
                </ul>
                {% include 'app/loginpartial.html' %}
            </div>
        </div>
    </div>

    <div class="body-content">
{% block content %}{% endblock %}
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="http://code.jquery.com/ui/1.8.18/jquery-ui.min.js"></script>  
    
    <script src="{% static 'app/scripts/bootstrap.js' %}"></script>
    <script src="{% static 'app/scripts/respond.js' %}"></script>
    

{% block scripts %}{% endblock %}

</body>
</html>
